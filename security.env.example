# Automation Bridge Server Security Configuration
# Copy this file to security.env and modify values as needed

# JWT Configuration
BRIDGE_SECURITY_JWT_SECRET=aquickbrownfoxjumpsoveralazydog1234567891337
BRIDGE_SECURITY_JWT_EXPIRATION=3600000

# IP Whitelist (comma-separated CIDR blocks or IPs)
# 0.0.0.0/0 allows all IPs - use with caution in production!
BRIDGE_SECURITY_ALLOWED_IPS=0.0.0.0/0

# Authentication
BRIDGE_SECURITY_REQUIRE_AUTH=true

# Rate Limiting
BRIDGE_SECURITY_RATE_LIMIT_REQUESTS=100
BRIDGE_SECURITY_RATE_LIMIT_WINDOW=60

# Usage:
# Export environment variables before starting server:
# source security.env
# java -jar target/bridge-server-1.0.0-shaded.jar --ssl --keystore server.jks --keystore-password automation2024